<%- include("../partials/header") %>


<div class="container">
	

<header class="jumbotron">
	<div class="container">
		
	
		
<h1>
	Welcome to TheatreEX
</h1>
	<p>Directory of world's best cinema halls and theatres</p>
	<p>
		
		
	<a class="btn btn-primary btn-lg" href="/theatre/new">Add new Theatre</a> </p>
	
	</div>
</header>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
	
	
	<% theatres.forEach(function(theatre){%>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">			
				<img src ="<%= theatre.image%>">
	<div class="caption">
		<h4> <%= theatre.name %> </h4></div>
			<p>
				<a class="btn btn-primary" href="/theatre/<%= theatre._id %>">More Info</a> 
				</p>
		</div></div>
	<% });%>
	</div>
</div>

<%- include("../partials/footer") %>