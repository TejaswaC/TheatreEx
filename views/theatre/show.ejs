<%- include("../partials/header") %> 


<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				TheatreEx
			</p>
			<div class="list-group">
				<li class="list-group-item active">Summary</li>
				<li class="list-group-item ">Shows</li>
				<li class="list-group-item">Facilities</li>
				<li class="list-group-item ">Special Features</li>



			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= theatre.image %>">
				<div class="caption-full">
					<h4 class="pull-right">Rs. 100/show
					</h4>
					<h4>
						<a><%= theatre.name %></a>
					</h4>
					<p>
						<%= theatre.description %>
					</p>
					<p>
						<em>Submitted By-<%= theatre.author.username %></em>
					</p>
					<% if(currentUser && theatre.author.id.equals(currentUser._id)){ %>
					<a class="btn btn-warning"href="/theatre/<%=theatre._id%>/edit">Edit</a>
					<form class="delete-form" action="/theatre/<%=theatre._id%>?_method=DELETE" method="POST">
						<button class="btn btn-danger">
							Delete
						</button>
					</form>
					<%}%>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/theatre/<%= theatre._id %>/comments/new">Add new Comment</a>
				</div>
				<hr>
				<% theatre.comments.forEach((comment) =>{ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">10 days ago</span>
						<p>
							<%= comment.text  %>
						</p>
											<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>

						<a class="btn btn-xs btn-warning" href="/theatre/<%= theatre._id %>/comments/<%=comment._id%>/edit">Edit</a>
						<form class="delete-form" method="POST" action="/theatre/<%=theatre._id%>/comments/<%=comment._id%>?_method=DELETE">
							<button class="btn btn-xs btn-danger">
								Delete
							</button>
						</form>
						<% } %>
					</div>
				</div>
<% }); %>

			</div>
		</div>
	</div>
</div>

	
	


<%- include("../partials/footer") %> 
